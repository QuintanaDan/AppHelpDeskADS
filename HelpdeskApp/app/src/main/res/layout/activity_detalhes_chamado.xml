<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_primary"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvHeaderChamado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎫 Detalhes do Chamado"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center" />

    </LinearLayout>

    <!-- Conteúdo -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card Principal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <!-- Número e Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tvNumeroDetalhe"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="#CH001"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/tvStatusDetalhe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABERTO"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:background="@drawable/status_aberto"
                        android:padding="8dp" />

                </LinearLayout>

                <!-- Título -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Título:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvTituloDetalhe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Problema com impressora"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="16dp" />

                <!-- Descrição -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descrição:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvDescricaoDetalhe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A impressora não está funcionando corretamente..."
                    android:textSize="16sp"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="4dp" />

                <!-- Informações adicionais -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Prioridade:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvPrioridadeDetalhe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🟡 MÉDIA"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Data de abertura:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvDataAberturaDetalhe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10/09/2025 14:30"
                        android:textSize="14sp"
                        android:textColor="@color/text_dark" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Última atualização:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/tvUltimaAtualizacaoDetalhe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10/09/2025 14:30"
                        android:textSize="14sp"
                        android:textColor="@color/text_dark" />

                </LinearLayout>

            </LinearLayout>

            <!-- Ações disponíveis -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ações Disponíveis:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginBottom="12dp" />

            <!-- Botões de ação - visíveis para clientes -->
            <LinearLayout
                android:id="@+id/layoutAcoesCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnAtualizarChamado"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="✏️ ADICIONAR INFORMAÇÕES"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/notification_info"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnCancelarChamado"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="❌ CANCELAR CHAMADO"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/notification_error"
                    android:background="@drawable/button_outline_red"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

            <!-- Botões de ação - visíveis para admins -->
            <LinearLayout
                android:id="@+id/layoutAcoesAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnIniciarAtendimento"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="🚀 INICIAR ATENDIMENTO"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/status_progress"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnResolverChamado"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="✅ MARCAR COMO RESOLVIDO"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/status_resolved"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnFecharChamado"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="🔒 FECHAR CHAMADO"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/status_closed" />

            </LinearLayout>

            <!-- Histórico -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Histórico:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:elevation="1dp">

                <TextView
                    android:id="@+id/tvHistorico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• 10/09/2025 14:30 - Chamado aberto pelo cliente"
                    android:textSize="14sp"
                    android:textColor="@color/text_dark"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
