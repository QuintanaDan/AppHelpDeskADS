<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for night mode. -->
    <style name="Theme.HelpDeskADS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue_purple</item>
        <item name="colorPrimaryVariant">@color/gradient_end</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_notification</item>
        <item name="colorSecondaryVariant">@color/bluish_gray_text</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_gray_footer</item>
        <!-- Background color for night mode -->
        <item name="android:windowBackground">@color/dark_gray_footer</item>
    </style>
</resources>
